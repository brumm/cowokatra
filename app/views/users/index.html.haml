#users.index
  .row
    .small-12.columns
      %h1 Alle Benutzer

  .row
    - @users.each do |user|
      .small-4.columns.text-center
        = link_to user, style: "background-image: url(#{image_path user.gravatar_url})", class: 'user-link thumbnail' do
          %span.initials= user.initials

  .row
    .small-12.text-center
      = will_paginate @users, renderer: FoundationPagination::Rails

